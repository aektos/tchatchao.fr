<form method="post" action="{{ path('authlog_delete') }}" onsubmit="return confirm('Are you sure you want to delete all logs?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete_all_authlogs') }}">
    <button class="btn btn-danger">{% trans %}Delete{% endtrans %}</button>
</form>
