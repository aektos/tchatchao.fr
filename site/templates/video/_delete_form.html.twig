<form method="post" action="{{ path('video_delete', {'id': video.id}) }}" onsubmit="return confirm('{% trans %}Are you sure you want to delete this item?{% endtrans %}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ video.id) }}">
    <button class="btn btn-danger btn-xs">{% trans %}Delete{% endtrans %}</button>
</form>
