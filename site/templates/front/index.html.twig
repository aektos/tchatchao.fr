{% block body %}

    {% include 'partials/menu.html.twig' %}

    <style type="text/css">
        {% for section, background in backgrounds %}
        {% if background.largeName %}
        {% set largeFile = vich_uploader_asset(background, 'largeFile') %}

        @media (min-width: 992px) {
        #{{ section }} {
            background-image: url({{ resize(largeFile, 1440, 719) }});
        }
        }

        {% if background.mediumName %}
        {% set mediumFile = vich_uploader_asset(background, 'mediumFile') %}
        {% else %}
        {% set mediumFile = largeFile %}
        {% endif %}

        @media (min-width: 768px) and (max-width: 991px) {
        #{{ section }} {
            background-image: url({{ resize(mediumFile, 768, 383) }});
        }
        }

        {% if background.smallName %}
        {% set smallFile = vich_uploader_asset(background, 'smallFile') %}
        {% else %}
        {% set smallFile = largeFile %}
        {% endif %}

        @media (max-width: 767px) {
        #{{ section }} {
            background-image: url({{ resize(smallFile, 480, 240) }});
        }
        }

        {% endif %}
        {% endfor %}
    </style>


    <!-- Header -->
    <header id="header">
        <div class="container-fluid">
            <div class="intro-text">
                <div class="row">
                    {#<div class="col-md-3 col-md-offset-5 ">#}
                    {#<iframe style="position: relative; bottom: -250px;" width="100%" height="250" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/users/22697299&amp;auto_play=false&amp;hide_related=false&amp;show_comments=false&amp;show_user=false&amp;show_reposts=false&amp;visual=false"></iframe>#}
                    {#</div>#}
                </div>
                <div class="intro-lead-in"></div>
                <div class="intro-heading"></div>
            </div>
        </div>
    </header>

    <!-- Agenda Section -->
    <section id="agenda">
        <div class="container">
            <div class="row text-center equal-height">
                {% for event in events %}
                    <div class="col-md-3 col-sm-4 col-xs-12">
                        <div class="thumbnail">
                            {% if event.imageName %}
                                <img class="img-responsive"
                                     src="{{ resize(vich_uploader_asset(event, 'imageFile'), 250, 180) }}"
                                     alt="{{ event.title }}">
                            {% endif %}
                            <h4>{{ event.title }}</h4>
                            {% if event.information %}<p class="text-muted">{{ event.information }}</p>{% endif %}
                            {% if event.place %}<p><i
                                    class="glyphicon glyphicon-map-marker"></i>{{ event.place }} {% if event.lat %}{% if event.lng %}
                            <a
                                    href="https://www.google.com/maps/dir/Current+Location/{{ event.lat }},{{ event.lng }}"
                                    class="btn btn-xs btn-primary" target="_blank">Itinéraire</a>{% endif %}{% endif %}
                                </p>{% endif %}
                            {% if event.date %}<p><i class="glyphicon glyphicon-time"></i>{{ event.date|date("d.M.Y") }}
                                à  {{ event.time|date("H:i") }}</p>{% endif %}
                            <div class="col-md-12">
                                <ul class="social-network social-circle">
                                    {% if event.fb %}
                                        <li><a href="{{ event.fb }}" class="icoFacebook" title="Facebook"
                                               target="_blank"><i class="fa fa-facebook"></i></a></li>{% endif %}
                                    {% if event.twttr %}
                                        <li><a href="{{ event.twttr }}" class="icoTwitter" title="Twitter"
                                               target="_blank"><i class="fa fa-twitter"></i></a></li>{% endif %}
                                    {% if event.website %}
                                        <li><a href="{{ event.website }}" class="icoGoogle" title="Website"
                                               target="_blank"><i class="glyphicon glyphicon-home"></i></a>
                                        </li>{% endif %}
                                </ul>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

    <!-- Gallery Grid Section -->
    <section id="gallery" class="bg-light-gray">
        <div class="container">
            {% if videos %}
                <div class="row bottom-space-md">
                    <div class="col-sm-12">
                        {% set first_video = videos|first %}
                        <iframe src="{{ first_video.url }}"
                                allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                allowfullscreen="" width="100%" height="500" frameborder="0"></iframe>
                    </div>
                </div>
            {% endif %}

            {% if videos or albums %}
                <div class="row photo-gallery">
                    {% for video in videos %}
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <div class="hovereffect">
                                {% if video.imageName %}
                                    <img class="img-responsive"
                                         src="{{ resize(vich_uploader_asset(video, 'imageFile'), 500, 300) }}"
                                         alt="title">
                                {% endif %}
                                <div class="overlay">
                                    <a class="visible-xs info" href="{{ video.url }}" target="_blank">
                                        <i class="hidden-xs fa fa-play fa-3x"></i>
                                    </a>
                                    <a class="hidden-xs info" href="{{ video.url }}" data-toggle="modal" data-target="#video-{{ loop.index }}">
                                        <i class="hidden-xs fa fa-play fa-3x"></i>
                                    </a>
                                </div>
                            </div>

                            <div class="modal fade" id="video-{{ loop.index }}" tabindex="-1" role="dialog" aria-labelledby="video-{{ loop.index }}"
                                 aria-hidden="true">
                                <div class="modal-dialog" style="width: 900px;">
                                    <div class="modal-content">
                                        <div class="modal-body">
                                            <iframe src="{{ video.url }}"
                                                    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
                                                    allowfullscreen="" width="100%" height="500" frameborder="0"></iframe>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}

                    {% for album in albums %}
                        <div class="col-lg-3 col-md-4 col-xs-6 thumb">
                            <div class="hovereffect">
                                {% if album.imageName %}
                                    <img class="img-responsive"
                                         src="{{ resize(vich_uploader_asset(album, 'imageFile'), 500, 300) }}"
                                         alt="{{ album.title }}">
                                {% endif %}
                                <div class="overlay">
                                    <h2>{{ album.title }}</h2>
                                    <a class="info" href="{{ album.url }}" target="_blank">
                                        <i class="hidden-xs fa fa-plus fa-3x"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}
        </div>
    </section>

    <!-- Team Section -->
    <section id="team" class="bg-light-gray">
        <div class="container">
            {% if members %}
                <div class="row">
                    {% for member in members %}
                        <div class="col-sm-3 col-xs-6">
                            <div class="team-member">
                                {% if member.imageName %}
                                    <img class="img-responsive img-circle"
                                         src="{{ resize(vich_uploader_asset(member, 'imageFile'), 253, 253) }}"
                                         alt="{{ member.firstname }}-{{ member.lastname }}-profil">
                                {% endif %}
                                <div class="team-member-legend">
                                    <h4>{{ member.firstname }} {{ member.lastname }}</h4>
                                    <p class="text-muted">{{ member.function }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% endif %}

            {% if bio %}
                {% if bio.bodytext %}
                    <div class="row">
                        <div class="col-lg-8 col-lg-offset-2 well light-well">
                            <p class="large text-muted text-center">{{ bio.bodytext | raw }}</p>
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact">
        <div class="container">
            <div class="row">
                <div class="text-center bottom-space-lg">
                    <h2 class="">Nous contacter</h2>
                </div>
            </div>
            {% if contact %}
                {% if contact.bodytext %}
                    <div class="row">
                        <div class="col-xs-12 col-lg-6 well light-well">
                            {{ contact.bodytext | raw }}
                        </div>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </section>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <span class="copyright">Copyright &copy; Tchatchao {{ "now"|date("Y") }}</span>
                </div>
                <div class="col-md-4">
                    <ul class="social-network social-circle">
                        <li><a href="{{ fb_page }}" class="icoFacebook" title="Facebook" target="_blank"><i
                                        class="fa fa-facebook"></i></a></li>
                        <li><a href="{{ youtube_page }}" class="icoYoutube" title="Youtube" target="_blank"><i
                                        class="fa fa-youtube"></i></a></li>
                    </ul>
