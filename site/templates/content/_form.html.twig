{{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
{{ form_widget(form.section, { 'attr': {'class': 'form-control'}}) }}
<h5>{{ form.section.vars.value }}</h5>
<div class="form-group">
    <div class="row">
        <div class="col-sm-2">
            {{ form_label(form.bodytext, NULL, { 'label_attr': {'class': 'control-label'}}) }}
        </div>
        <div class="col-sm-4">
            {{ form_errors(form.bodytext) }}
            {{ form_widget(form.bodytext, { 'attr': {'class': 'form-control'}}) }}
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-sm-2"></div>
        <div class="col-sm-4">
            <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
        </div>
    </div>
</div>
{{ form_end(form) }}

<script type="text/javascript">
    $(document).ready(function () {
        tinymce.init({
            selector: '#content_bodytext',
            theme: "modern",
            plugins: [
                "advlist autolink lists link charmap print preview hr anchor pagebreak",
                "searchreplace wordcount visualblocks visualchars code fullscreen",
                "nonbreaking save table contextmenu directionality",
                "emoticons template paste textcolor colorpicker textpattern"
            ],
            toolbar1: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link",
            toolbar2: "print preview media | forecolor backcolor emoticons",
        });
    });
</script>