{% extends 'base.html.twig' %}

{% block title %}Event{% endblock %}

{% block body %}
    <h1>Event</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ event.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ event.title }}</td>
            </tr>
            <tr>
                <th>Information</th>
                <td>{{ event.information }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ event.date ? event.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ event.time ? event.time|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Place</th>
                <td>{{ event.place }}</td>
            </tr>
            <tr>
                <th>Lat</th>
                <td>{{ event.lat }}</td>
            </tr>
            <tr>
                <th>Lng</th>
                <td>{{ event.lng }}</td>
            </tr>
            <tr>
                <th>Fb</th>
                <td>{{ event.fb }}</td>
            </tr>
            <tr>
                <th>Twttr</th>
                <td>{{ event.twttr }}</td>
            </tr>
            <tr>
                <th>Website</th>
                <td>{{ event.website }}</td>
            </tr>
            <tr>
                <th>ImageName</th>
                <td>{{ event.imageName }}</td>
            </tr>
            <tr>
                <th>ImageSize</th>
                <td>{{ event.imageSize }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>

    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>

    {{ include('event/_delete_form.html.twig') }}
{% endblock %}
